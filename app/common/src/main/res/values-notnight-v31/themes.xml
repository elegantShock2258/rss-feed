<resources>
    <style name="RSSFeedStyle" parent="Theme.Material3Expressive.DayNight.NoActionBar">
        <item name="colorPrimary">?attr/colorAccent</item>

        <item name="android:statusBarColor">@color/windowBg</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowBackground">@color/windowBg</item>
        <item name="android:navigationBarColor">@color/windowBg</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:fontFamily">@font/inter</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:textColorLink">?attr/colorAccent</item>

        <item name="colorAccent">@android:color/system_accent1_400</item>
        <item name="colorSecondaryContainer">@color/element</item>

        <!-- MaterialSwitch -->
        <item name="colorSurfaceVariant">@color/surface</item>
        <item name="colorOutline">@color/surface_border</item>
    </style>

    <style name="RSSFeedStyle.FAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>

    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="colorContainer">@android:color/system_accent1_100</item>
        <item name="colorOnContainer">@android:color/system_accent1_400</item>
    </style>
</resources>
