<resources>
    <!-- Base application theme. -->
    <style name="RSSFeedStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">?attr/colorAccent</item>

        <item name="android:statusBarColor">@color/windowBg</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowBackground">@color/windowBg</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:fontFamily">@font/inter</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:textColorLink">?attr/colorAccent</item>
        <item name="colorAccent">?attr/colorAccent</item>
    </style>

    <style name="AccentBlue" parent="RSSFeedStyle">
        <item name="colorAccent">@color/accentBlue</item>
    </style>

    <style name="AccentViolet" parent="RSSFeedStyle">
        <item name="colorAccent">@color/accentViolet</item>
    </style>
    <style name="AccentPink" parent="RSSFeedStyle">
        <item name="colorAccent">@color/accentPink</item>
    </style>
    <style name="AccentRed" parent="RSSFeedStyle">
        <item name="colorAccent">@color/accentRed</item>
    </style>
    <style name="AccentOrange" parent="RSSFeedStyle">
        <item name="colorAccent">@color/accentOrange</item>
    </style>
    <style name="AccentYellow" parent="RSSFeedStyle">
        <item name="colorAccent">@color/accentYellow</item>
    </style>
    <style name="AccentGreen" parent="RSSFeedStyle">
        <item name="colorAccent">@color/accentGreen</item>
    </style>

    <style name="BottomSheetStyle" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialog</item>
    </style>

    <style name="BottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <style name="RSSFeedStyle.EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="hintTextColor">@color/textSecondary</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
        <item name="background">@null</item>
    </style>
</resources>