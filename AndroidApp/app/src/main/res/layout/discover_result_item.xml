<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/element_background"
    android:padding="10dp"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingRight="5dp">
        <TextView
            android:id="@+id/discover_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/textPrimary"
            android:textSize="17sp"
            app:fontFamily="@font/inter_bold" />
        <TextView
            android:id="@+id/discover_result_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            app:fontFamily="@font/inter"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/discover_result_add"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:background="@drawable/element_background">
        <View
            android:id="@+id/discover_result_add_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:background="@drawable/icon_plus"
            android:backgroundTint="?attr/colorAccent" />
    </RelativeLayout>
</LinearLayout>